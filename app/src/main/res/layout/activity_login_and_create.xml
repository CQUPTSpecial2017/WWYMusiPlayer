<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools">


<android.widget.RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hgsil.wwymusicplayer.ui.LoginAndCreateActivity">
    <com.hgsil.wwymusicplayer.ui.View.RatioLayout
        android:id="@+id/activity_login_and_create_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ratio="0.647"
        >
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_background"/>
    </com.hgsil.wwymusicplayer.ui.View.RatioLayout>

    <android.support.v7.widget.CardView

        app:cardBackgroundColor="@color/colorAccent"
        android:id="@+id/activity_login_and_create_login_button"
        android:layout_below="@+id/activity_login_and_create_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:clickable="true"
        >
        <TextView
            android:id="@+id/activity_login_and_create_login_button_text"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_title"
            android:background="@drawable/text_circle"
            android:textColor="@color/colorAccent"
            android:text="@string/login_with_phone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/colorAccent"
        android:id="@+id/activity_login_and_create_create_button"
        android:layout_below="@+id/activity_login_and_create_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        app:cardElevation="0dp"
        android:clickable="true"
        >
        <TextView

            android:id="@+id/activity_login_and_create_create_button_text"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_title"
            android:background="@drawable/text_circle"
            android:textColor="@color/colorAccent"
            android:text="@string/register"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </android.support.v7.widget.CardView>
</android.widget.RelativeLayout>
</layout>
